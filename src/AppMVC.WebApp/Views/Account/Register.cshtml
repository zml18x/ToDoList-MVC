@model AppMVC.WebApp.Models.Account.RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />

<div class="auth-container">
    <div class="auth-content">
        <h2 class="auth-title">Register</h2>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "auth-form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-input" })
                @Html.ValidationMessageFor(m => m.Email, null, new { @class = "form-error" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-input" })
                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "form-error" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-input" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "form-error" })
            </div>

            <div class="form-group">
                <button type="submit" class="auth-btn auth-btn-primary">Register</button>
            </div>
        }
    </div>
</div>